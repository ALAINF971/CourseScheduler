<%- partial('../template/partials/header')%>
<%- partial('../template/partials/navigation')%>

<div class="intro-header" style="padding-top: 0px; padding-bottom: 0px">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h3>Register </h3>
                    <hr class="intro-divider" >

                </div>

            </div>
        </div>
    </div>

</div>
<div class="content-section-a">
    <div class="container">
        <div class="row">
            <div class="col-md-4 .col-md-offset-6">
                <p>Please enter information.</p>
                <div id='message'></div>
                <form role="form">
                    <fieldset>

                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input type="text" name="first_name" id="first_name" class="form-control input-lg" placeholder="First Name" />
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input type="text" name="last_name" id="last_name" class="form-control input-lg" placeholder="Last Name" />
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email address" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input type="text" name="student_id" id="student_id" class="form-control input-lg" placeholder="Student ID" />
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
                                <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
                                <input type="password" name="condfirmed_password" id="confirmed_password" class="form-control input-lg" placeholder="Confirmed Password">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-4">
                                <button type="button" class="btn btn-lg btn-success btn-block"  id="submit" value="Save">Register</button>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <a href="/" class="btn btn-link pull-right">Back to Login</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <div id="error"></div>
            </div>
        </div>
    </div>
</div>


<%- partial('../template/partials/footer') %>
<script src='js/register.js'></script>












